menu "App configuration"

menu "I2C (LCD)"
config APP_I2C_SDA
    int "I2C SDA (GPIO)"
    range 0 48
    default 10 if IDF_TARGET_ESP32C6
    default 8  if IDF_TARGET_ESP32C3
    default 21 if IDF_TARGET_ESP32 || IDF_TARGET_ESP32S3
    default 33 if IDF_TARGET_ESP32S2
    help
      Domyślne piny:
        - ESP32‑C6: SDA=10, SCL=11
        - ESP32‑C3: SDA=8,  SCL=9
        - ESP32/S3: SDA=21, SCL=22
        - ESP32‑S2: SDA=33, SCL=35

config APP_I2C_SCL
    int "I2C SCL (GPIO)"
    range 0 48
    default 11 if IDF_TARGET_ESP32C6
    default 9  if IDF_TARGET_ESP32C3
    default 22 if IDF_TARGET_ESP32 || IDF_TARGET_ESP32S3
    default 35 if IDF_TARGET_ESP32S2

config APP_I2C_HZ
    int "I2C częstotliwość (Hz)"
    range 10000 1000000
    default 100000

config APP_I2C_PULLUP
    bool "Włącz wewnętrzne pull-up I²C (zalecane także zewnętrzne 4.7 kΩ)"
    default y
endmenu

menu "LCD DFR0464 (RGB)"
config APP_LCD_ADDR
    hex "Adres LCD (7‑bit)"
    default 0x3E
    help
      ST7032i/AIP31068 w DFR0464 zwykle 0x3E (7‑bit).

config APP_RGB_ADDR
    hex "Adres RGB (7‑bit)"
    default 0x2D
    help
      PCA9633 na DFR0464 v2.0 zwykle 0x2D (7‑bit).

config APP_LCD_TEXT0
    string "Tekst: wiersz 0"
    default "ESP32 Event LCD"

config APP_LCD_TEXT1
    string "Tekst: wiersz 1"
    default "RGB: 16x2 DFR0464"

# Podświetlenie (mniejsze = ciemniej)
config APP_RGB_R
    int "R (0..255)"
    range 0 255
    default 16

config APP_RGB_G
    int "G (0..255)"
    range 0 255
    default 32

config APP_RGB_B
    int "B (0..255)"
    range 0 255
    default 64

# Kontrast ST7032i: 6 bitów (C5..C0) = HIGH(2 bity)*16 + LOW(4 bity)
config APP_LCD_CONTR_HIGH
    int "Kontrast – wysokie bity (0..3)"
    range 0 3
    default 2

config APP_LCD_CONTR_LOW
    int "Kontrast – niskie bity (0..15)"
    range 0 15
    default 8

# Timingi/porcjowanie I²C (init + zapis DDRAM)
config APP_LCD_INIT_FIRST_DELAY_MS
    int "Opóźnienie po pierwszym 0x38 (ms)"
    range 0 200
    default 40

config APP_LCD_BURST_SIZE
    int "Rozmiar paczki DDRAM (Bajtów)"
    range 1 32
    default 16

config APP_LCD_INTERCHUNK_DELAY_MS
    int "Pauza między paczkami DDRAM (ms)"
    range 0 10
    default 1

# Przełącznik bajtu kontrolnego komend LCD (0x80 lub 0x00)
config APP_LCD_CMD_CTRL_0X80
    bool "Komendy LCD z bajtem kontrolnym 0x80 (zamiast 0x00)"
    default y
    help
      W niektórych egzemplarzach ST7032/AIP31068 komendy z 0x80 działają stabilniej.
endmenu

endmenu
