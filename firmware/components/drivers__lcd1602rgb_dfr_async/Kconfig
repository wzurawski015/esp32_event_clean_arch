menu "LCD1602RGB (DFRobot DFR0464) – ustawienia sterownika"

config APP_LCD_CONTR_LOW
    int "LCD contrast low C[3:0]"
    range 0 15
    default 12
    help
      Niższe 4 bity kontrastu ST7032 (0..15).

config APP_LCD_CONTR_HIGH
    int "LCD contrast high C[5:4]"
    range 0 3
    default 1
    help
      Wyższe 2 bity kontrastu ST7032 (0..3).

config APP_LCD_INIT_FIRST_DELAY_MS
    int "LCD init: pierwszy delay po 0x38 [ms]"
    range 0 200
    default 40

config APP_LCD_BURST_SIZE
    int "LCD DDRAM burst (znaki na paczkę)"
    range 1 16
    default 8

config APP_LCD_INTERCHUNK_DELAY_MS
    int "LCD DDRAM: pauza między paczkami [ms]"
    range 0 10
    default 1

endmenu
