menu "App Demo: LCD RGB"

    menu "I2C Configuration"
        config APP_I2C_SDA
            int "I2C SDA (GPIO)"
            range 0 48
            default 10 if IDF_TARGET_ESP32C6
            default 8  if IDF_TARGET_ESP32C3
            default 21 if IDF_TARGET_ESP32 || IDF_TARGET_ESP32S3
            default 33 if IDF_TARGET_ESP32S2

        config APP_I2C_SCL
            int "I2C SCL (GPIO)"
            range 0 48
            default 11 if IDF_TARGET_ESP32C6
            default 9  if IDF_TARGET_ESP32C3
            default 22 if IDF_TARGET_ESP32 || IDF_TARGET_ESP32S3
            default 35 if IDF_TARGET_ESP32S2

        config APP_I2C_HZ
            int "I2C Frequency (Hz)"
            range 10000 1000000
            default 100000

        config APP_I2C_PULLUP
            bool "Enable internal I2C pull-ups"
            default y
    endmenu

    menu "LCD Hardware (DFR0464)"
        config APP_LCD_ADDR
            hex "LCD Address (7-bit)"
            default 0x3E

        config APP_RGB_ADDR
            hex "RGB Address (7-bit)"
            default 0x2D

        config APP_LCD_CONTR_HIGH
            int "Contrast High (0..3)"
            default 2

        config APP_LCD_CONTR_LOW
            int "Contrast Low (0..15)"
            default 8

        config APP_LCD_INIT_FIRST_DELAY_MS
            int "Init Delay (ms)"
            default 40

        config APP_LCD_BURST_SIZE
            int "Burst Size"
            default 16

        config APP_LCD_INTERCHUNK_DELAY_MS
            int "Inter-chunk Delay (ms)"
            default 1
            
        config APP_LCD_CMD_CTRL_0X80
            bool "Use 0x80 control byte"
            default y
    endmenu

    menu "Demo Settings"
        config APP_LCD_TEXT0
            string "Row 0 Text"
            default "ESP32 Event LCD"

        config APP_LCD_TEXT1
            string "Row 1 Text"
            default "RGB: 16x2 DFR0464"

        config APP_RGB_R
            int "Backlight Red (0..255)"
            range 0 255
            default 16

        config APP_RGB_G
            int "Backlight Green (0..255)"
            range 0 255
            default 32

        config APP_RGB_B
            int "Backlight Blue (0..255)"
            range 0 255
            default 64
    endmenu
endmenu
