# === UART konsoli ===
CONFIG_ESP_CONSOLE_UART_DEFAULT=y
CONFIG_ESP_CONSOLE_UART=y
CONFIG_ESP_CONSOLE_UART_NUM=0
CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200

# === Flash size (domyślnie 8MB; jeśli Twoja płytka ma 2MB, zmień tutaj) ===
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="8MB"

# === Twoje opcje aplikacyjne (z Kconfig.projbuild) ===
# I2C
CONFIG_APP_I2C_SDA=6
CONFIG_APP_I2C_SCL=7
CONFIG_APP_I2C_HZ=100000        # na start bezpiecznie 100 kHz
CONFIG_APP_I2C_PULLUP=y

# Adresy urządzeń
CONFIG_APP_LCD_ADDR=0x3E
CONFIG_APP_RGB_ADDR=0x62

# Wyjściowy ekran i domyślne RGB
CONFIG_APP_LCD_TEXT0="ESP32 Event LCD"
CONFIG_APP_LCD_TEXT1="RGB: 16x2 DFR0464"
CONFIG_APP_RGB_R=16
CONFIG_APP_RGB_G=32
CONFIG_APP_RGB_B=64
